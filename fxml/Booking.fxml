<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="your.package.BookingController">
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
    </padding>
    <Label text="Book Your Parking Spot">
        <font>
            <Font name="Arial" size="16" />
        </font>
    </Label>
    <ComboBox fx:id="spotSelection" promptText="Select Parking Spot">
        <!-- Items added dynamically in Controller -->
    </ComboBox>
    <Button text="Book Spot" onAction="#handleBooking" style="-fx-background-color: #98FB98;"/>
</VBox>
